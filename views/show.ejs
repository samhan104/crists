<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs') %>
        <title>Crists</title>
</head>

<body>
    <!-- for the things needed array, have an edit and delete button next to each -->
    <!-- when editing, just have the  -->
    <div class="container">
        <div class="pageTitle">
            <h1>
                <%= list.name %>
            </h1>
        </div>
        <div class="content">
            <ul>
                <% for (let i=0; i < list.items.length; i++){%>
                    <li>
                        <%= list.items[i] %>
                    </li>
                    <% } %>
            </ul>
            <a href="/<%=list.id%>/edit">
                <button>
                    Edit
                </button>
            </a>
            <a href="/">
                <button>
                    Back
                </button>
            </a>
            <form action=""></form>
            <form action="/<%=list.id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form>
        </div>
    </div>
</body>

</html>